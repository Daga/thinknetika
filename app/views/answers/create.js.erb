$('.answers ul').append("<%= j render @answer %>");
$('form#new_answer #answer_body').val('');
$('.errors').html("<%= j render 'errors', item: @answer %>");
$('.edit-answer-link').click(function(e) {
  e.preventDefault();
  $(this).hide();
  answer_id = $(this).data('answerId');
  $('form#edit-answer-' + answer_id).show();
});